<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="cn.truistic.touchimageviewdemo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".demo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".demo.SingleActivity"/>
        <activity android:name=".demo.ViewPagerActivity"/>
        <activity android:name=".demo.ImageLoaderActivity"/>
        <activity android:name=".demo.PicassoActivity"/>
        <activity android:name=".demo.GlideActivity"/>
    </application>

</manifest>
